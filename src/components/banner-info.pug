mixin bannerInfo(args={})
  .pol-banner__info  
    if args.subtitle 
      span.pol-banner__subtitle=args.subtitle
    if args.link
      a.pol-banner__subtitle--link=args.link
    h1.pol-banner__title=args.title
    if args.author
      .pol-banner__author By 
        a.pol-banner__link.simptip-position-top.simptip-fade.simptip-smooth(href=args.href,  data-tooltip=args.toolTip, target='blanc')=args.author
        | |
        time(datetime=args.dateTime).pol-banner__time=args.time
    p.pol-banner__text=args.text
    +button({
      type: 'button',
      text: 'Read More >',
      toolTip: 'Read more'
})
