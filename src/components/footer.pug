mixin footer(args={})
  footer.pol-footer 
    .wrapper.pol-footer__wrapper 
      .pol-footer__head 
        a(href="../index.html").pol-footer__logo
          +logo()
        if args.indexMode
          +navigation({
              indexMode: true,
              text: 'Privacy Policy'
            }) 
        else
          +navigation({text: 'Privacy Policy'})
        //- +navigation({text: 'Privacy Policy'})
      .pol-footer__body
        h2.pol-footer__title Subscribe to our news letter to get latest updates and news
        .pol-footer__block
          .pol-footer__input
            +formItem({
              placeholder: 'Enter Your Email',
              toolTip: 'Your Email',
              name: 'email',
              type: 'email',
            })
          .pol-footer__button
            +button({
              type: 'button',
              text: 'Subscribe',
              toolTip: 'Push for Subscribe',
              })
      .pol-footer__footer 
        .pol-footer__info 
          a.pol-footer__link.simptip-position-bottom.simptip-fade.simptip-smooth(href="https://www.google.com/maps/place/%D0%A4%D0%B8%D0%BD%D1%82%D0%B0%D1%83%D0%BD,+Co.+%D0%94%D0%BE%D0%BD%D0%B5%D0%B3%D0%BE%D0%BB,+%D0%98%D1%80%D0%BB%D0%B0%D0%BD%D0%B4%D0%B8%D1%8F/@54.8695755,-8.1242338,15z/data=!3m1!4b1!4m5!3m4!1s0x485f9f63a37df68b:0xa00c7a99731da90!8m2!3d54.869564!4d-8.115479", target='_blank', data-tooltip=args.toolTip) Finstreet 118 2561 Fintown
          br
          a.pol-footer__link.simptip-position-bottom.simptip-fade.simptip-smooth(href="mailto: Hello@finsweet.com", target='_blank', data-tooltip=args.toolTip) Hello@finsweet.com  
          a.pol-footer__link.simptip-position-bottom.simptip-fade.simptip-smooth(href="tel: 020 7993 2905", target='_blank', data-tooltip=args.toolTip) 020 7993 2905
        .pol-footer__socials 
          +socials({
            whiteMode: true
          })