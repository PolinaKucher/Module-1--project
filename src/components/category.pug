mixin category(args={})
  section.alx-category
    .wrapper.alx-category__wrapper
      h3.alx-category__title Choose A Category    
      ul.alx-category__list
        +categoryItem({
          icon: '<svg class="icon icon-business"><use xlink:href="#icon-business"></use></svg>',
          title: 'Business',
          subtitle: 'Lorem ipsum dolor sit amet, consectetuer adipiscing elit.'
        })
        +categoryItem()
        +categoryItem()
        +categoryItem()